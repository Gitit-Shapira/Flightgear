<UserControl x:Class="FlightMonitor.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Viewbox HorizontalAlignment="Center">
        <Grid>
            <Button Content="Play" HorizontalAlignment="Left" Height="25" Margin="19,25,0,0" VerticalAlignment="Top" Width="60" Click="Button_Play"/>
            <Button Content="Pause" HorizontalAlignment="Left" Height="25" Margin="84,25,0,0" VerticalAlignment="Top" Width="60" Click="Button_Pause" Grid.ColumnSpan="2"/>
            <Button Content="Stop" HorizontalAlignment="Left" Height="25" Margin="149,25,0,0" VerticalAlignment="Top" Width="60" Click="Button_Stop" Grid.Column="1"/>
            <Slider HorizontalAlignment="Left" Margin="15,50,0,0" Name="slider_seek" VerticalAlignment="Top" Width="770" ValueChanged="Slider_ValueChanged" Grid.ColumnSpan="4"/>
        </Grid>
    </Viewbox>
</UserControl>
