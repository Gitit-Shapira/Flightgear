        <Slider Value="{Binding VM_Rudder}" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="230,225.333,0,39.333" Name="slider_rudder" Width="340" Background="DarkBlue" Grid.Row="1"/>
        <Slider Value="{Binding VM_Throttle}" Minimum="-1" Maximum="1" HorizontalAlignment="Left" Margin="-4,39,0,0" Name="slider_throttle" VerticalAlignment="Top" Width="339"  Background="BlueViolet" Height="21" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-89.59"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="373,10,0,0" TextWrapping="Wrap" Text="aileron" VerticalAlignment="Top" Width="81" RenderTransformOrigin="1.925,0.13" FontSize="25"/>
        <TextBlock HorizontalAlignment="Left" Height="32" Margin="596,1,0,0" TextWrapping="Wrap" Text="elevator" VerticalAlignment="Top" Width="94" RenderTransformOrigin="-1.06,0.719" Grid.Row="1" FontSize="25">
